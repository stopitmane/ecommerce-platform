{
  "version": 2,
  "buildCommand": "cd client && npm install && npm run build && cd .. && cp -r client/dist dist",
  "outputDirectory": "dist",
  "installCommand": "npm install && npm install --workspace=server",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    }
  ]
}
